{
  "name": "arc",
  "version": "0.22.49",
  "description": "ARC is an experimental web app that aims to help individuals, organizations, communities and families to collaboratively organize their work pipeline using an impact driven mindset.",
  "main": "index.html",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently --handle-input -c \"bgMagenta.bold,bgGreen.bold\" \"npm:ser:dev\" \"npm:cli:dev\"",
    "cli:dev": "webpack serve --config client/webpack.cli.dev.js",
    "cli:build": "rimraf client/build/* && webpack --config client/webpack.cli.prod.js",
    "ser:dev": "rimraf server/build/* && webpack --config server/webpack.ser.dev.js",
    "ser:build": "rimraf server/build/* && webpack --config server/webpack.ser.prod.js",
    "lint": "eslint --ext .js,.jsx client/src/ server/src/",
    "test": "npm run prod:lint"
  },
