{
  "name": "arc",
  "version": "0.4.2",
  "description": "sensible framework for team work",
  "main": "index.html",
  "scripts": {
    "start": "webpack-dev-server --config build/webpack.dev.js",
    "lint": "eslint --ext .js,.vue src",
    "build": "npm run lint && rimraf dist/* && webpack --config build/webpack.prod.js",
    "deploy": "npm run build && firebase deploy",
    "commit": "npm run lint && git add -A && git commit",
    "push": "git push && git push --tags",
    "bump:patch": "npm run commit && npm version patch && npm run push",
    "bump:minor": "npm run commit && npm version minor && npm run push",
    "release:patch": "npm run bump:patch && npm run deploy",
    "release:minor": "npm run bump:minor && npm run deploy"
  },
  "author": "j@vmelo.net",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "firebase": "^6.6.1",
    "firebaseui": "^4.2.0",
    "jquery": "^3.4.1",
    "moment": "^2.24.0",
    "popper.js": "^1.15.0",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "vue-loader": "^15.7.1",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.40.2",
