{
  "name": "arc",
  "version": "0.22.49",
  "description": "ARC is an experimental web app that aims to help individuals, organizations, communities and families to collaboratively organize their work pipeline using an impact driven mindset.",
  "main": "index.html",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently --handle-input -c \"bgMagenta.bold,bgGreen.bold,bgBlue.bold\" \"npm:dev:watch\" \"npm:dev:serve\" \"npm:dev:tests\"",
    "dev:watch": "rimraf build/* && webpack --env dev --config webpack.config.js",
    "dev:serve": "firebase emulators:start",
    "dev:tests": "cypress open",
    "build": "rimraf build/* && webpack --env prod --config webpack.config.js",
    "deploy": "npm run build && firebase deploy",
    "lint": "eslint --ext .js,.vue src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaomelo/arc.git"
  },
  "author": "jo√£o melo <j@melo.plus> (https://blog.melo.plus)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/joaomelo/arc/issues"
  },
  "homepage": "https://github.com/joaomelo/arc#readme",
  "dependencies": {
    "ajv": "^6.10.2",
    "core-js": "^3.6.5",
    "faker": "^4.1.0",
    "firebase": "^8.1.1",
    "i18next": "^19.7.0",
    "lodash-es": "^4.17.15",
    "regenerator-runtime": "^0.13.7",
    "rxjs": "^6.6.0",
    "vee-validate": "^3.4.5",
    "vue": "^2.6.12",
    "vue-router": "^3.4.9",
    "vuetify": "^2.3.18",
    "vuex": "^3.5.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/preset-env": "^7.10.3",
    "babel-loader": "^8.1.0",
    "circular-dependency-plugin": "^5.2.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.6.0",
    "cypress": "^6.0.1",
    "deepmerge": "^4.2.2",
    "dotenv-webpack": "^5.1.0",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^7.1.0",
    "eslint-webpack-plugin": "^2.4.0",
    "html-webpack-plugin": "^4.3.0",
    "playwright": "^1.6.2",
    "rimraf": "^3.0.2",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^1.2.1",
    "vue-eslint-parser": "^7.1.1",
    "vue-loader": "^15.9.5",
    "vue-template-compiler": "^2.6.12",
    "vuetify-loader": "^1.6.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  }
