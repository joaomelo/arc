{
  "name": "arc",
  "version": "0.22.49",
  "description": "ARC is an experimental web app that aims to help individuals, organizations, communities and families to collaboratively organize their work pipeline using an impact driven mindset.",
  "main": "dist/index.html",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently --handle-input -c \"bgMagenta.bold,bgGreen.bold,bgBlue.bold\" \"npm:dev:*\" \"npm:dev:serve\" \"npm:dev:tests\"",
    "dev:serve": "firebase emulators:start",
    "dev:build": "rimraf dist/* && webpack --config webpack.config.js --env dev",
    "dev:tests": "jest --watchAll --detectOpenHandles --coverage=false --setupTestFrameworkScriptFile=./tests/config/local-dev.js",
    "lint": "eslint --ext .js,.vue src/",
    "test": "npm run base:build -- --env dev && npm run test:local:integration",
    "base:build": "rimraf dist/* && webpack --config webpack.config.js",
    "test:local:integration": "firebase emulators:exec -- \"jest --detectOpenHandles --setupTestFrameworkScriptFile=./tests/config/local-prod.js\"",
    "test:ci:integration": "firebase emulators:exec -- \"jest --setupTestFrameworkScriptFile=./tests/config/ci.js\"",
    "deploy:local": "npm run base:lint && npm run base:build -- --env prodLocal && npm run test:local:integration && firebase deploy",
    "deploy:ci": "npm run base:lint && npm run base:build -- --env prodCi && npm run test:ci:integration && firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaomelo/arc.git"
  },
  "author": "jo√£o melo <j@melo.plus> (https://blog.melo.plus)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/joaomelo/arc/issues"
  },
  "homepage": "https://github.com/joaomelo/arc#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "core-js": "^3.9.1",
    "firebase": "^8.3.0",
    "lodash-es": "^4.17.21",
    "regenerator-runtime": "^0.13.7",
    "rxjs": "^6.6.6",
    "uuid": "^8.3.2",
    "vue": "^3.0.7",
    "vue-i18n": "^8.24.1",
    "winston": "^3.3.3",
    "xstate": "^4.16.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.20",
    "@vue/compiler-sfc": "^3.0.7",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "circular-dependency-plugin": "^5.2.0",
    "concurrently": "^6.0.0",
    "copy-webpack-plugin": "^8.1.0",
    "css-loader": "^5.1.3",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^7.0.2",
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jest-formatting": "^2.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-webpack-plugin": "^2.5.2",
    "faker": "^5.4.0",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^26.6.3",
    "playwright": "^1.9.2",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "vue-loader": "^16.1.2",
    "webpack": "^5.27.2",
    "webpack-cli": "^4.5.0"
  }
}
